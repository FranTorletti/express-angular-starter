{
  "name": "mean-relational",
  "version": "1.0.0",
  "description": "API server boilerplate using Node/Express/Sequelize",
  "main": "api/index.js",
  "scripts": {
    "start": "npm run apidoc && npm run clusters",
    "clusters": "babel-node api/clusters.server.js",
    "dev": "better-npm-run dev",
    "lint": "eslint client/web/app/modules",
    "lint:fix": "npm run lint -- --fix",
    "test": "NODE_ENV=test mocha api/tests/**/*.js  --require api/tests/helpers --compilers js:babel-register --reporter spec",
    "coverage": "NODE_ENV=test node_modules/.bin/babel-node node_modules/.bin/babel-istanbul cover _mocha api/tests/**/*.js -- --require api/tests/helpers",
    "apidoc": "apidoc -i api/routes/ -o client/web/dist/apidoc",
    "deploy": "better-npm-run deploy"
  },
  "apidoc": {
    "name": "Node Task API - Documentation",
    "template": {
      "forceLanguage": "en"
    }
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon --exec babel-node api/index.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy": {
      "command": "echo TODO",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    }
  },
  "author": "Facundo Munoz",
  "dependencies": {
    "acl": "^0.4.9",
    "bcrypt": "^0.8.5",
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "consign": "^0.1.2",
    "cors": "^2.7.1",
    "express": "^4.13.4",
    "helmet": "^1.1.0",
    "jwt-simple": "^0.4.1",
    "mongoose": "^4.5.9",
    "morgan": "^1.6.1",
    "nodemailer": "^2.3.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.0.0",
    "q": "^1.4.1",
    "sequelize": "^3.19.2",
    "sqlite3": "^3.1.1",
    "winston": "^2.1.1"
  },
  "devDependencies": {
    "apidoc": "^0.15.1",
    "babel-cli": "^6.5.1",
    "babel-eslint": "^5.0.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.5.2",
    "better-npm-run": "0.0.5",
    "browser-sync": "^2.2.1",
    "chai": "^3.5.0",
    "connect-modrewrite": "^0.8.5",
    "del": "^1.1.1",
    "dirty-chai": "^1.2.2",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.1.0",
    "eslint-plugin-flow-vars": "^0.1.3",
    "eslint-plugin-react": "^4.2.1",
    "estraverse-fb": "^1.3.1",
    "gulp": "^3.9.0",
    "gulp-apidoc": "^0.2.3",
    "gulp-autoprefixer": "^2.3.1",
    "gulp-cache": "^0.2.8",
    "gulp-eslint": "^2.0.0",
    "gulp-if": "^1.2.5",
    "gulp-imagemin": "^2.2.1",
    "gulp-load-plugins": "^0.10.0",
    "gulp-minify-css": "^1.1.1",
    "gulp-minify-html": "^1.0.0",
    "gulp-mocha": "^2.2.0",
    "gulp-nodemon": "^2.0.6",
    "gulp-plumber": "^1.0.1",
    "gulp-protractor": "^2.2.0",
    "gulp-sass": "^2.0.0",
    "gulp-size": "^1.2.1",
    "gulp-sourcemaps": "^1.5.0",
    "gulp-traceur-compiler": "^1.1.4",
    "gulp-uglify": "^1.1.0",
    "gulp-useref": "^1.1.1",
    "gulp.spritesmith": "^6.0.0",
    "istanbul": "^0.4.3",
    "jasmine": "^2.4.1",
    "karma": "^0.13.22",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-cli": "^0.1.2",
    "karma-jasmine": "^0.3.8",
    "karma-phantomjs-launcher": "^1.0.0",
    "main-bower-files": "^2.5.0",
    "mocha": "^2.4.5",
    "node-bourbon": "^4.2.3",
    "nodemon": "^1.8.1",
    "opn": "^1.0.1",
    "phantomjs-prebuilt": "^2.1.6",
    "run-sequence": "^1.1.5",
    "supertest": "^1.2.0",
    "wiredep": "^2.2.2"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "quotes": [
        2,
        "single"
      ]
    }
  }
}
